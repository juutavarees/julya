# Informações pré-definidas
personagem = "Lúcia"
lugar = "uma antiga floresta"
atividade = "explorando os arredores"
objeto = "um mapa misterioso"
local_objeto = "dentro de uma caverna secreta"
surpresa = "um portal se abriu diante dela, revelando um novo mundo"

# Montagem da história
historia = f"\nEra uma vez, {personagem}, que estava em {lugar}.\n"
historia += f"Ela estava {atividade}, quando, de repente, encontrou {objeto} {local_objeto}.\n"
historia += f"Isso causou que {surpresa} e mudou tudo para {personagem}.\n"

# Exibir a história
print(historia)
